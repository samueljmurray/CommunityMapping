<div class="row">
	<div class="col-sm-12">
		<h1>
			Add Map
			<div class="btn-group float-right">
				<a class="btn btn-default back" role="button">&larr; Back</a>
				<a class="btn btn-default to-maps" role="button">Maps</a>
			</div>
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-sm-12 messages"></div>
</div>

<div class="row">
	<div class="col-sm-12 form-container">
		<form role="form">
			<div class="form-group">
				<label for="inputName" class="control-label">Map name</label>
				<input type="text" class="form-control" id="inputName" placeholder="Map name">
			</div>
			<div class="form-group">
				<label for="inputSWLatitude" class="control-label">SW Latitude</label>
				<input type="text" class="form-control" id="inputSWLatitude" placeholder="SW Latitude">
			</div>
			<div class="form-group">
				<label for="inputSWLongitude" class="control-label">SW Longitude</label>
				<input type="text" class="form-control" id="inputSWLongitude" placeholder="SW Longitude">
			</div>
			<div class="form-group">
				<label for="inputNELatitude" class="control-label">NE Latitude</label>
				<input type="text" class="form-control" id="inputNELatitude" placeholder="NE Latitude">
			</div>
			<div class="form-group">
				<label for="inputNELongitude" class="control-label">NE Longitude</label>
				<input type="text" class="form-control" id="inputNELongitude" placeholder="NE Longitude">
			</div>
			<button type="submit" class="btn btn-default btn-submit">Submit</button>
		</form>
	</div>
</div>